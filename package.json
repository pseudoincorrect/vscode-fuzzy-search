{
  "name": "fuzzy-search-telescope",
  "displayName": "Regex Search Telescope",
  "description": "A telescope-like regex search extension for VSCode with split-pane interface (developed with LLM assistance)",
  "version": "0.0.1",
  "author": "Maxime Clement",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:fuzzySearch.searchInFile",
    "onCommand:fuzzySearch.searchInFolder"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fuzzySearch.searchInFile",
        "title": "Regex Search: Search in Current File"
      },
      {
        "command": "fuzzySearch.searchInFolder",
        "title": "Regex Search: Search in Current Folder"
      }
    ],
    "keybindings": [
      {
        "command": "fuzzySearch.searchInFile",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f"
      },
      {
        "command": "fuzzySearch.searchInFolder",
        "key": "ctrl+shift+p",
        "mac": "cmd+shift+p"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && node ./out/test/suite/searchInFile.test.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.28.0",
    "mocha": "^11.7.1",
    "typescript": "^4.9.4"
  }
}
